<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Countries.Views.ResultPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="AliceBlue">
            <Label x:Name="lblRegionName" Text="Loading..." FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" Padding="0,15,0,15" TextColor="DarkSlateBlue"></Label>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" x:Name="lblCountryName" Text="(CountryName)" TextColor="Black" Padding="0,0,10,0" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>