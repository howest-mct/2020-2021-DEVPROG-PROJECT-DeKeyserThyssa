    <ContentPage.Content>
        <StackLayout BackgroundColor="White" Orientation="Vertical">
            <!--the 'resources' part contains styles for the controls inside the stacklayout
            you can COLLAPSE it for better readability of the rest using the '-' sign on the left-->
            <StackLayout.Resources>
                <ResourceDictionary>
                    <Style TargetType="{x:Type Grid}">
                        <Setter Property="HeightRequest" Value="50" />
                    </Style>
                    <Style TargetType="{x:Type Label}" x:Key="TitleLabelStyle">
                        <Setter Property="TextColor" Value="Black" />
                        <Setter Property="FontAttributes" Value="Bold" />
                        <Setter Property="VerticalOptions" Value="Center" />
                        <Setter Property="Margin" Value="16,0,0,0" />
                    </Style>
                    <Style TargetType="{x:Type Label}" x:Key="DetailLabelStyle">
                        <Setter Property="TextColor" Value="Black" />
                        <Setter Property="FontAttributes" Value="Bold" />
                        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
                        <Setter Property="HorizontalOptions" Value="EndAndExpand" />
                        <Setter Property="Margin" Value="0,0,16,0" />
                    </Style>
                </ResourceDictionary>
            </StackLayout.Resources>
            <Image x:Name="ImageFlag" Source="" Margin="70" HeightRequest="140" WidthRequest="140" VerticalOptions="Start" />
            <!--Grid for the name (style/layout is defined in resources above)-->
            <Grid>
                <Label Text="Name" Style="{StaticResource TitleLabelStyle}" />
                <Label x:Name="lblName" Style="{StaticResource DetailLabelStyle}" />
            </Grid>
            <BoxView Color="Black" HeightRequest="1" />
            <!--separator line

            Grid for the occupation (style/layout is defined in resources above)-->
            <Grid>
                <Label Text="Capital" Style="{StaticResource TitleLabelStyle}" />
                <Label x:Name="lblCapital" Style="{StaticResource DetailLabelStyle}" />
            </Grid>
            <BoxView Color="Black" HeightRequest="1" />
            <!--separator line-->

            <Grid>
                <Label Text="Region" Style="{StaticResource TitleLabelStyle}" />
                <Label x:Name="lblRegion" Style="{StaticResource DetailLabelStyle}" />
